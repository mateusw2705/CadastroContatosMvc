@model MvcProject.Models.Contato

@{
    ViewData["Title"] = "Criar novo contato";
}

<div class="container">
    <h1>Criar novo Contato</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Criar">
                <div class="form-group">
                    <label asp-for="Nome" class="form-label">Nome:</label>
                    <input asp-for="Nome" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Telefone" class="form-label">Telefone:</label>
                    <input asp-for="Telefone" class="form-control" />
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" asp-for="Ativo" class="form-check-input" />
                    <label asp-for="Ativo" class="form-check-label">Ativo</label>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<hr />
<div>
    <!-- Outras informações, se necessário -->
</div>
